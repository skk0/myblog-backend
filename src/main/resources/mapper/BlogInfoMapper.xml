<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.skk.blog.mapper.BlogInfoMapper">

    <!-- 查询所有配置 -->
    <select id="selectAllKeyValue" resultType="java.util.Map">
        SELECT config_key, config_value FROM blog_info
    </select>

    <!-- 根据config_key查询配置 -->
    <select id="selectByKey" resultType="com.skk.blog.entity.BlogInfo">
        SELECT id, config_key, config_value, description, create_time, update_time
        FROM blog_info
        WHERE config_key = #{configKey}
    </select>

</mapper>
